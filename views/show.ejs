<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">My Blog</div>
    
    <div class="ui items">
      <div class="item">
        <div class="image">
           <img src="<%= blog.image%>">
        </div>
      <div class="content">
           <a class="header"><%= blog.name%></a>
        <div class="meta">
           <span>description</span>
        </div>
        <div class="description">
           <p><%= blog.body%></p>
        </div>
        
       
    </div>
  </div>    
    
</div>    
<%=blog.created.toDateString() %>

<form action="/blog/<%=blog._id%>/edit" method="get">
    <button class="ui basic blue button">Edit Blog</button>
</form>
<form  id="delete" action="/blog/<%=blog._id%>?_method=delete" method="post">
    <button class="ui basic red button">Delete</button>
</form>

 </div>